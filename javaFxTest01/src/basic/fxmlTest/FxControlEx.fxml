<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300.0" prefWidth="555.0" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="basic.fxmlTest.FxControlExController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="이 름 :" />
            <TextField fx:id="tfName" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="성 별 :" />
            <RadioButton fx:id="rdSung1" mnemonicParsing="false" selected="true" text="남">
               <toggleGroup>
                  <ToggleGroup fx:id="tgSung" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rdSung2" mnemonicParsing="false" text="여" toggleGroup="$tgSung" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label text="취 미 :" />
            <CheckBox fx:id="chkHb1" mnemonicParsing="false" text="여행" />
            <CheckBox fx:id="chkHb2" mnemonicParsing="false" text="등산" />
            <CheckBox fx:id="chkHb3" mnemonicParsing="false" text="독서" />
            <CheckBox fx:id="chkHb4" mnemonicParsing="false" text="바둑" />
            <CheckBox fx:id="chkHb5" mnemonicParsing="false" text="장기" />
            <CheckBox fx:id="chkHb6" mnemonicParsing="false" text="게임" />
            <CheckBox fx:id="chkHb7" mnemonicParsing="false" text="테니스" />
            <CheckBox fx:id="chkHb8" mnemonicParsing="false" text="배드민턴" />
         </children>
      </HBox>
      <Button fx:id="btnView" mnemonicParsing="false" onAction="#btnViewClicked" text="보 기" />
      <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
