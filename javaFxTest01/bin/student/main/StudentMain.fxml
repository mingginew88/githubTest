<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="student.main.StudentMainController">
   <center>
      <TableView fx:id="stdTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="stdNameCol" prefWidth="90.0" text="이름" />
          <TableColumn fx:id="stdKorCol" prefWidth="90.0" text="국어" />
            <TableColumn fx:id="stdEngCol" prefWidth="90.0" text="영어" />
            <TableColumn fx:id="stdMatCol" prefWidth="90.0" text="수학" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAddClick" text="추가" />
            <Button fx:id="btnViewBarChart" mnemonicParsing="false" onAction="#btnViewBarChartClick" text="학생별 막대그래프" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
