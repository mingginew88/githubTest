<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" prefHeight="300.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="basic.fxmlTest.FxControlExController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <HBox fx:id="hbox_name" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label fx:id="lbl_name" text="이 름 :" />
            <TextField fx:id="txtField" />
         </children>
      </HBox>
      <HBox fx:id="hbox_gender" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label fx:id="lbl_gender" text="성 별 : " />
            <RadioButton fx:id="Gen_Man" mnemonicParsing="false" text="남">
               <toggleGroup>
                  <ToggleGroup fx:id="gen" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="Gen_Woman" mnemonicParsing="false" text="여" toggleGroup="$gen" />
         </children>
      </HBox>
      <HBox fx:id="hbox_hobby" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label fx:id="lbl_hobby" text="취 미 : " />
            <HBox fx:id="chk_hobbies" prefHeight="30.0" prefWidth="450.0" spacing="5.0">
               <children>
                  <CheckBox fx:id="chk_trip" mnemonicParsing="false" text="여행" />
                  <CheckBox fx:id="chk_climbing" mnemonicParsing="false" text="등산" />
                  <CheckBox fx:id="chk_readbook" mnemonicParsing="false" text="독서" />
                  <CheckBox fx:id="chk_go" mnemonicParsing="false" text="바둑" />
                  <CheckBox fx:id="chk_chess" mnemonicParsing="false" text="장기" />
                  <CheckBox fx:id="chk_game" mnemonicParsing="false" text="게임" />
                  <CheckBox fx:id="chk_tennis" mnemonicParsing="false" text="테니스" />
                  <CheckBox fx:id="chk_bedminton" mnemonicParsing="false" text="배드민턴" />
               </children>
            </HBox>
         </children>
      </HBox>
      <Button fx:id="btn" mnemonicParsing="false" onAction="#btnClicked" text="보 기" />
      <TextArea fx:id="txtArea" maxWidth="400.0" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>









